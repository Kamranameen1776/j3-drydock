{
    "name": "@j3-drydock/api",
    "version": "3.2311.221",
    "description": "DryDock API",
    "main": "src/index.ts",
    "engines": {
        "node": ">=14.0.0",
        "npm": ">=6.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://jibe-erp@dev.azure.com/jibe-erp/JiBe/_git/j3-drydock"
    },
    "devDependencies": {
        "@types/body-parser": "^1.18.4",
        "@types/cors": "^2.8.5",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.2",
        "@types/lodash": "^4.14.195",
        "@types/node": "^14.18.52",
        "@types/supertest": "^2.0.12",
        "@types/uuid": "^9.0.2",
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "@typescript-eslint/parser": "^5.61.0",
        "concurrently": "^4.1.2",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "express-swagger-generator": "^1.1.11",
        "jest": "^29.5.0",
        "jest-cli": "^29.5.0",
        "nodemon": "^2.0.20",
        "prettier": "^2.8.8",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "axios": "^1.4.0",
        "body-parser": "^1.18.4",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "http-status-codes": "^1.3.1",
        "j2utils": "^3.2308.113",
        "j3-express-auto-routes": "^22.12.1",
        "lodash": "^4.17.21",
        "moment": "^2.22.2",
        "mssql": "^6.4.1",
        "pm2": "^5.1.2",
        "typeorm": "0.2.25",
        "uuid": "^3.3.2"
    },
    "scripts": {
        "lint": "eslint \"src/**/*.ts\"",
        "lint:fix": "eslint \"src/**/*.ts\" --fix",
        "migrations": "node -r dotenv/config build/cli/migration_run.js",
        "migration:create": "typeorm migration:create -n",
        "start": "ts-node src/index.ts",
        "start:build": "node -r dotenv/config build/index.js",
        "local": "nodemon -r dotenv/config src/index.ts",
        "localpm2": "pm2 start . -n %npm_package_name% --watch && concurrently --kill-others \"tsc -w\" \"pm2 logs\"",
        "test": "jest --runInBand --forceExit --detectOpenHandles",
        "test:coverage": "npm run test -- --coverage",
        "test:integration": "npm run test -- --c jest.integration.config.js",
        "test:watch": "jest --watch",
        "build": "tsc -p ./tsconfig.build.json"
    },
    "nodemonConfig": {
        "watch": [
            "src/**/*.ts"
        ],
        "ignore": [
            "src/**/*.spec.ts"
        ],
        "execMap": {
            "ts": "ts-node"
        }
    }
}
